{
	"name": "fpctoolkit",
	"displayName": "Fpc toolkit",
	"description": "Toolkit for free pascal.",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "coolchyni",
	"activationEvents": [
		"onCommand:fpctoolkit.helloWorld",
		"onView:FpcProjectExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fpctoolkit.filterproject",
				"title": "Filter Fpc Project"
			},
			{
				"command": "fpctoolkit.project.build",
				"title": "Build"
			},
			{
				"command": "fpctoolkit.project.opensetting",
				"title": "Open"
			}
		],
		"taskDefinitions": [
			{
				"type": "fpc",
				"required": [
					"file"
				],
				"properties": {
					"file": {
						"type": "string",
						"description": "The project file of FPC. "
					},
					"buildOption": {
						"type": "object",
						"properties": {
							"targetOS": {
								"type": "string",
								"description": "Target OS (-T)",
								"examples": [
									"linux",
									"win32",
									"win64",
									"Darwin"
								]
							},
							"targetCPU": {
								"type": "string",
								"description": "Target cpu family (-P)",
								"examples": [
									"x86_64",
									"aarch64",
									"i386"
								]
							},
							"searchPath": {
								"type": "array",
								"description": "Searchpath for units and other system dependent things.(-Fu)",
								"items": {
									"type": "string"
								}
							},
							"libPath": {
								"type": "array",
								"description": "Searchpath for libraries.(-Fl)",
								"items": {
									"type": "string"
								}
							},
							"unitOutputDir": {
								"type": "string",
								"description": "Unit output directory.(-FU)"
							},
							"outputFile": {
								"type": "string",
								"description": "Target file name.(-o)"
							},
							"syntaxMode": {
								"type": "string",
								"description": "Syntax Mode (-M)",
								"examples": [
									"fpc",
									"Delphi",
									"DelphiUnicode",
									"ObjFPC"
								]
							},
							"optimizationLevel": {
								"type": "number",
								"description": "Optimization levels (-O)",
								"enum": [
									1,
									2,
									3,
									4
								]
							},
							"customOptions": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"description": "Custom compile options for fpc."
							}
						}
					}
				}
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "fpctoolkit.project.build",
					"when": "view == FpcProjectExplorer && viewItem==fpcbuild",
					"group": "fpcproject@1"
				},
				{
					"command": "fpctoolkit.project.opensetting",
					"when": "view == FpcProjectExplorer && viewItem==fpcproject",
					"group": "fpcproject@0"
				}
			]
		},
		"configuration": [
			{
				"title": "FpcToolkit",
				"properties": {
					"fpctoolkit.fpcPath": {
						"type": "string",
						"description": "path for free pascal"
					}
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "FpcProjectExplorer",
					"name": "FPC Projects"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "FpcProjectExplorer",
				"contents": "No fpc projects found.\n[Create New Project](command:fpctoolkit.project.newproject)",
				"when": "!workspace.workspaceFolders"
			}
		],
		"problemMatchers": [
			{
				"name": "fpc",
				"owner": "external",
				"pattern": [
					{
						"regexp": "Compiling ([^\\s].*(p|pp|pas|lpr))$",
						"file": 1
					},
					{
						"regexp": "^([\\w]+\\.(p|pp|pas|lpr))\\((\\d+)\\,(\\d+)\\)\\s(Fatal|Error|Warning|Note):(.*)",
						"line": 3,
						"column": 4,
						"severity": 5,
						"message": 6,
						"loop": true
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}